<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lei.studyvolley.MainActivity">

    <EditText
        android:id="@+id/et_json_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="和图灵聊天"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btn_json_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textColor="#fa817f7f"
        android:background="#4cdf12"/>
    <TextView
        android:id="@+id/tv_json_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#535758"/>

</LinearLayout>
